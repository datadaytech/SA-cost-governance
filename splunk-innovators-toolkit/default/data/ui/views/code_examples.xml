  <!-- EXAMPLE 5: Loading State -->
  <row>
    <panel>
      <title>Example 5: Loading States</title>
      <html>
        <div class="sit-scope" style="padding: 20px;">
          <p class="sit-text-secondary" style="margin-bottom: 20px;">Show loading states while data is being fetched.</p>

          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 24px;">
            <!-- Loading Card -->
            <div class="sit-card">
              <div class="sit-card-body" style="text-align: center; padding: 40px;">
                <div class="sit-spinner sit-spinner-lg"></div>
                <p class="sit-text-muted" style="margin-top: 16px;">Loading data...</p>
              </div>
            </div>

            <!-- Loading Button -->
            <div class="sit-card">
              <div class="sit-card-body" style="text-align: center; padding: 40px;">
                <button class="sit-btn sit-btn-primary sit-btn-loading sit-btn-lg" style="min-width: 150px;">
                  Submitting
                </button>
                <p class="sit-text-muted" style="margin-top: 16px;">Button loading state</p>
              </div>
            </div>

            <!-- Progress Loading -->
            <div class="sit-card">
              <div class="sit-card-body" style="padding: 40px 20px;">
                <p style="margin-bottom: 12px;">Processing: 65%</p>
                <div class="sit-progress sit-progress-striped sit-progress-animated">
                  <div class="sit-progress-bar" style="width: 65%;"></div>
                </div>
                <p class="sit-text-muted" style="margin-top: 12px;">Progress indicator</p>
              </div>
            </div>
          </div>

          <details style="background: #1F2527; border-radius: 8px; padding: 16px;">
            <summary style="cursor: pointer; color: #FD1875; font-weight: 500;">View Code</summary>
            <pre style="margin: 16px 0 0; color: #A0A0A0; font-size: 12px; overflow-x: auto;"><code>&lt;!-- Spinner --&gt;
&lt;div class="sit-spinner sit-spinner-lg"&gt;&lt;/div&gt;

&lt;!-- Loading Button --&gt;
&lt;button class="sit-btn sit-btn-primary sit-btn-loading"&gt;
  Submitting
&lt;/button&gt;

&lt;!-- Animated Progress --&gt;
&lt;div class="sit-progress sit-progress-striped sit-progress-animated"&gt;
  &lt;div class="sit-progress-bar" style="width: 65%;"&gt;&lt;/div&gt;
&lt;/div&gt;</code></pre>
          </details>
        </div>
      </html>
    </panel>
  </row>

  <!-- EXAMPLE 6: Notification Area -->
  <row>
    <panel>
      <title>Example 6: Alert/Notification Boxes</title>

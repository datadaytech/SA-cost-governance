  <!-- EXAMPLE 7: Tabs Navigation -->
  <row>
    <panel>
      <title>Example 7: Tabbed Content</title>
      <html>
        <div class="sit-scope" style="padding: 20px;">
          <p class="sit-text-secondary" style="margin-bottom: 20px;">Organize content into tabs (requires JavaScript for interactivity).</p>

          <div class="sit-tabs" style="margin-bottom: 24px;">
            <div class="sit-tabs-list">
              <button class="sit-tab sit-tab-active" data-tab="ex-tab1">Overview</button>
              <button class="sit-tab" data-tab="ex-tab2">Details</button>
              <button class="sit-tab" data-tab="ex-tab3">Logs</button>
            </div>
            <div class="sit-tab-panel sit-tab-panel-active" id="ex-tab1">
              <h4>Overview Content</h4>
              <p class="sit-text-secondary">This is the overview tab. Add your summary content here.</p>
            </div>
            <div class="sit-tab-panel" id="ex-tab2">
              <h4>Details Content</h4>
              <p class="sit-text-secondary">Detailed information goes in this tab.</p>
            </div>
            <div class="sit-tab-panel" id="ex-tab3">
              <h4>Logs Content</h4>
              <p class="sit-text-secondary">Log entries would be displayed here.</p>
            </div>
          </div>

          <details style="background: #1F2527; border-radius: 8px; padding: 16px;">
            <summary style="cursor: pointer; color: #FD1875; font-weight: 500;">View Code (HTML + JavaScript)</summary>
            <pre style="margin: 16px 0 0; color: #A0A0A0; font-size: 12px; overflow-x: auto;"><code>&lt;!-- HTML --&gt;
&lt;div class="sit-tabs"&gt;
  &lt;div class="sit-tabs-list"&gt;
    &lt;button class="sit-tab sit-tab-active" data-tab="tab1"&gt;Tab 1&lt;/button&gt;
    &lt;button class="sit-tab" data-tab="tab2"&gt;Tab 2&lt;/button&gt;
  &lt;/div&gt;
  &lt;div class="sit-tab-panel sit-tab-panel-active" id="tab1"&gt;Content 1&lt;/div&gt;
  &lt;div class="sit-tab-panel" id="tab2"&gt;Content 2&lt;/div&gt;
&lt;/div&gt;

&lt;!-- JavaScript (in your script file) --&gt;
$('.sit-tab').on('click', function() {
    var tabId = $(this).data('tab');
    $('.sit-tab').removeClass('sit-tab-active');
    $(this).addClass('sit-tab-active');
    $('.sit-tab-panel').removeClass('sit-tab-panel-active');
    $('#' + tabId).addClass('sit-tab-panel-active');
});</code></pre>
          </details>
        </div>
      </html>
    </panel>
  </row>

</dashboard>

  <!-- EXAMPLE 3: Form Layout -->
  <row>
    <panel>
      <title>Example 3: Configuration Form</title>
      <html>
        <div class="sit-scope" style="padding: 20px;">
          <p class="sit-text-secondary" style="margin-bottom: 20px;">A typical configuration form with validation hints.</p>

          <div class="sit-card" style="max-width: 500px; margin-bottom: 24px;">
            <div class="sit-card-header">
              <h4 class="sit-card-title">Alert Configuration</h4>
            </div>
            <div class="sit-card-body">
              <div class="sit-form-group">
                <label class="sit-label sit-label-required">Alert Name</label>
                <input type="text" class="sit-input" placeholder="Enter alert name..." />
              </div>

              <div class="sit-form-group">
                <label class="sit-label">Severity</label>
                <div class="sit-select-wrapper">
                  <select class="sit-select">
                    <option>Low</option>
                    <option>Medium</option>
                    <option selected="selected">High</option>
                    <option>Critical</option>
                  </select>
                  <span class="sit-select-arrow">&#9660;</span>
                </div>
                <span class="sit-help-text">Select the severity level for this alert</span>
              </div>

              <div class="sit-form-group">
                <label class="sit-label">Threshold</label>
                <input type="number" class="sit-input" value="100" />
              </div>
            </div>
            <div class="sit-card-footer" style="display: flex; gap: 8px; justify-content: flex-end;">
              <button class="sit-btn sit-btn-secondary">Cancel</button>
              <button class="sit-btn sit-btn-primary">Save Configuration</button>
            </div>
          </div>

          <details style="background: #1F2527; border-radius: 8px; padding: 16px;">
            <summary style="cursor: pointer; color: #FD1875; font-weight: 500;">View Code</summary>
            <pre style="margin: 16px 0 0; color: #A0A0A0; font-size: 12px; overflow-x: auto;"><code>&lt;div class="sit-card"&gt;
  &lt;div class="sit-card-header"&gt;
    &lt;h4 class="sit-card-title"&gt;Alert Configuration&lt;/h4&gt;
  &lt;/div&gt;
  &lt;div class="sit-card-body"&gt;
    &lt;div class="sit-form-group"&gt;
      &lt;label class="sit-label sit-label-required"&gt;Alert Name&lt;/label&gt;
      &lt;input type="text" class="sit-input" placeholder="Enter..." /&gt;
    &lt;/div&gt;
    &lt;div class="sit-form-group"&gt;
      &lt;label class="sit-label"&gt;Severity&lt;/label&gt;
      &lt;div class="sit-select-wrapper"&gt;
        &lt;select class="sit-select"&gt;
          &lt;option&gt;Low&lt;/option&gt;
          &lt;option&gt;High&lt;/option&gt;
        &lt;/select&gt;
        &lt;span class="sit-select-arrow"&gt;&amp;#9660;&lt;/span&gt;
      &lt;/div&gt;
      &lt;span class="sit-help-text"&gt;Helper text&lt;/span&gt;
    &lt;/div&gt;
  &lt;/div&gt;
  &lt;div class="sit-card-footer"&gt;
    &lt;button class="sit-btn sit-btn-secondary"&gt;Cancel&lt;/button&gt;
    &lt;button class="sit-btn sit-btn-primary"&gt;Save&lt;/button&gt;
  &lt;/div&gt;
&lt;/div&gt;</code></pre>
          </details>
        </div>
      </html>
    </panel>
  </row>


<dashboard version="1.1" theme="dark" script="js/sit-toolkit.js" stylesheet="css/sit-core.css,css/sit-components.css">
  <label>Splunk Innovators Toolkit Demo</label>
  <description>Interactive demo of all UI components</description>

  <row>
    <panel>
      <html>
        <style>
          /* Override Splunk default backgrounds */
          .dashboard-body,
          .dashboard-row,
          .dashboard-panel,
          .panel-body,
          .html {
            background: transparent !important;
          }

          .demo-page {
            background: var(--sit-bg-dark, #171A1C);
          }

          .demo-hero {
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(253, 24, 117, 0.2) 50%, rgba(16, 185, 129, 0.2) 100%);
            border: 1px solid rgba(99, 102, 241, 0.3);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 24px;
            text-align: center;
            position: relative;
            overflow: hidden;
          }

          .demo-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #6366F1 0%, #FD1875 50%, #10B981 100%);
          }

          .demo-hero h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0 0 12px 0;
            background: linear-gradient(135deg, #6366F1 0%, #FD1875 50%, #10B981 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
          }

          .demo-hero p {
            color: #c0c0c0;
            font-size: 1.1rem;
            margin: 0 0 24px 0;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
          }

          .demo-buttons {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            justify-content: center;
          }

          .demo-section {
            background: linear-gradient(180deg, rgba(31, 37, 39, 0.8) 0%, rgba(23, 26, 28, 0.9) 100%);
            border: 1px solid rgba(60, 68, 77, 0.5);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 20px;
          }

          .demo-section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #ffffff;
            margin: 0 0 20px 0;
            padding-bottom: 12px;
            border-bottom: 2px solid;
            border-image: linear-gradient(90deg, #6366F1, #FD1875) 1;
          }

          .demo-section-purple .demo-section-title {
            border-image: linear-gradient(90deg, #6366F1, #8B5CF6) 1;
          }

          .demo-section-pink .demo-section-title {
            border-image: linear-gradient(90deg, #FD1875, #F472B6) 1;
          }

          .demo-section-green .demo-section-title {
            border-image: linear-gradient(90deg, #10B981, #34D399) 1;
          }

          .demo-section-blue .demo-section-title {
            border-image: linear-gradient(90deg, #3B82F6, #60A5FA) 1;
          }

          .demo-section-orange .demo-section-title {
            border-image: linear-gradient(90deg, #F59E0B, #FBBF24) 1;
          }
        </style>

        <div class="demo-page sit-scope">
          <div class="demo-hero">
            <h1>Splunk Innovators Toolkit</h1>
            <p>Production-ready UI components for building beautiful, interactive Splunk dashboards. Click the buttons to try them out!</p>
            <div class="demo-buttons">
              <button class="sit-btn sit-btn-primary" id="demo-modal">Open Modal</button>
              <button class="sit-btn sit-btn-success" id="demo-toast-success">Success Toast</button>
              <button class="sit-btn sit-btn-danger" id="demo-toast-error">Error Toast</button>
              <button class="sit-btn sit-btn-secondary" id="demo-toast-warning">Warning Toast</button>
              <button class="sit-btn sit-btn-outline" id="demo-confirm">Confirm Dialog</button>
            </div>
          </div>
        </div>
      </html>
    </panel>
  </row>
  
  <row>
    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-purple">
            <h3 class="demo-section-title">Buttons</h3>
            <div style="display: flex; gap: 12px; flex-wrap: wrap; margin-bottom: 20px;">
              <button class="sit-btn sit-btn-primary">Primary</button>
              <button class="sit-btn sit-btn-secondary">Secondary</button>
              <button class="sit-btn sit-btn-outline">Outline</button>
              <button class="sit-btn sit-btn-ghost">Ghost</button>
              <button class="sit-btn sit-btn-danger">Danger</button>
              <button class="sit-btn sit-btn-success">Success</button>
            </div>

            <div style="display: flex; gap: 12px; flex-wrap: wrap; margin-bottom: 20px;">
              <button class="sit-btn sit-btn-primary sit-btn-sm">Small</button>
              <button class="sit-btn sit-btn-primary">Medium</button>
              <button class="sit-btn sit-btn-primary sit-btn-lg">Large</button>
            </div>

            <div style="display: flex; gap: 12px; flex-wrap: wrap;">
              <button class="sit-btn sit-btn-primary sit-btn-loading">Loading</button>
              <button class="sit-btn sit-btn-secondary" disabled="disabled">Disabled</button>
            </div>
          </div>
        </div>
      </html>
    </panel>

    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-blue">
            <h3 class="demo-section-title">Form Controls</h3>
            <div class="sit-form-group">
              <label class="sit-label">Text Input</label>
              <input type="text" class="sit-input" placeholder="Enter text..." />
            </div>

            <div class="sit-form-group">
              <label class="sit-label sit-label-required">Required Field</label>
              <input type="text" class="sit-input" placeholder="This field is required" />
            </div>

            <div class="sit-form-group">
              <label class="sit-label">Select Dropdown</label>
              <div class="sit-select-wrapper">
                <select class="sit-select">
                  <option>Select an option...</option>
                  <option>Option 1</option>
                  <option>Option 2</option>
                  <option>Option 3</option>
                </select>
                <span class="sit-select-arrow">â–¼</span>
              </div>
            </div>
          </div>
        </div>
      </html>
    </panel>
  </row>
  
  <row>
    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-green">
            <h3 class="demo-section-title">Checkboxes &amp; Toggles</h3>
            <div id="checkbox-container" style="margin-bottom: 20px;"></div>
            <hr style="border-color: rgba(16, 185, 129, 0.3); margin: 20px 0;" />
            <div id="toggle-container"></div>
          </div>
        </div>
      </html>
    </panel>

    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-orange">
            <h3 class="demo-section-title">Progress &amp; Loading</h3>
            <div style="margin-bottom: 20px;">
              <label class="sit-label">Default Progress (75%)</label>
              <div class="sit-progress">
                <div class="sit-progress-bar" style="width: 75%;"></div>
              </div>
            </div>

            <div style="margin-bottom: 20px;">
              <label class="sit-label">Success Progress (100%)</label>
              <div class="sit-progress">
                <div class="sit-progress-bar sit-progress-bar-success" style="width: 100%;"></div>
              </div>
            </div>

            <div style="margin-bottom: 20px;">
              <label class="sit-label">Animated Striped Progress</label>
              <div class="sit-progress sit-progress-striped sit-progress-animated">
                <div class="sit-progress-bar" style="width: 60%;"></div>
              </div>
            </div>

            <div style="display: flex; gap: 20px; align-items: center;">
              <div class="sit-spinner sit-spinner-sm"></div>
              <div class="sit-spinner"></div>
              <div class="sit-spinner sit-spinner-lg"></div>
            </div>
          </div>
        </div>
      </html>
    </panel>
  </row>
  
  <row>
    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-pink">
            <h3 class="demo-section-title">Badges</h3>
            <div style="display: flex; gap: 12px; flex-wrap: wrap;">
              <span class="sit-badge sit-badge-primary">Primary</span>
              <span class="sit-badge sit-badge-success">Success</span>
              <span class="sit-badge sit-badge-warning">Warning</span>
              <span class="sit-badge sit-badge-error">Error</span>
              <span class="sit-badge sit-badge-info">Info</span>
            </div>
          </div>
        </div>
      </html>
    </panel>

    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-purple">
            <h3 class="demo-section-title">Cards</h3>
            <div class="sit-card">
              <div class="sit-card-header">
                <h4 class="sit-card-title">Card Title</h4>
                <button class="sit-btn sit-btn-ghost sit-btn-sm">Action</button>
              </div>
              <div class="sit-card-body">
                <p>This is a card component with a header, body, and footer. Use it to group related content.</p>
              </div>
              <div class="sit-card-footer">
                <span class="sit-text-muted sit-text-sm">Last updated: Just now</span>
              </div>
            </div>
          </div>
        </div>
      </html>
    </panel>
  </row>
  
  <row>
    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-blue">
            <h3 class="demo-section-title">Data Table</h3>
            <div style="margin-bottom: 16px;">
              <input type="text" class="sit-input" id="table-search" placeholder="Search table..." style="max-width: 300px;" />
            </div>
            <div id="demo-table"></div>
          </div>
        </div>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <html>
        <div class="sit-scope">
          <div class="demo-section demo-section-green">
            <h3 class="demo-section-title">Tabs</h3>
            <div class="sit-tabs">
              <div class="sit-tabs-list">
                <button class="sit-tab sit-tab-active" data-tab="tab1">Overview</button>
                <button class="sit-tab" data-tab="tab2">Details</button>
                <button class="sit-tab" data-tab="tab3">Settings</button>
              </div>
              <div class="sit-tab-panel sit-tab-panel-active" id="tab1">
                <h4 style="color: #ffffff; margin-bottom: 12px;">Overview Content</h4>
                <p style="color: #c0c0c0;">This is the overview tab content. Click other tabs to see how they work.</p>
              </div>
              <div class="sit-tab-panel" id="tab2">
                <h4 style="color: #ffffff; margin-bottom: 12px;">Details Content</h4>
                <p style="color: #c0c0c0;">This is the details tab content with more specific information.</p>
              </div>
              <div class="sit-tab-panel" id="tab3">
                <h4 style="color: #ffffff; margin-bottom: 12px;">Settings Content</h4>
                <p style="color: #c0c0c0;">Configure your settings here.</p>
              </div>
            </div>
          </div>
        </div>
      </html>
    </panel>
  </row>

</dashboard>
